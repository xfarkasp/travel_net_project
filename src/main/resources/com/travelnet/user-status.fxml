<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="165.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelnet.controller.UserStatusController">
   <children>
      <HBox prefHeight="30.0" prefWidth="193.0">
         <children>
            <ImageView fx:id="userProfile" fitHeight="41.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/icons/icons8-male-user-48.png" />
               </image>
            </ImageView>
            <Label fx:id="username" prefHeight="38.0" prefWidth="101.0" text="USERNAME" />
         </children>
      </HBox>
      <Label fx:id="typeValue" prefHeight="37.0" prefWidth="71.0" text="Type:" />
      <Label text="Stamina:" />
      <Label fx:id="staminaValue" text="STAMINA" />
      <Label text="Hunger:" />
      <Label fx:id="hungerValue" text="HUNGER" />
      <Button mnemonicParsing="false" onMouseClicked="#useAbility" text="Use ability" />
   </children>
</VBox>
