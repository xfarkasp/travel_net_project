<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="186.0" prefWidth="211.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelnet.controller.UserStatusController">
   <children>
      <HBox prefHeight="30.0" prefWidth="193.0">
         <children>
            <ImageView fx:id="userProfile" fitHeight="41.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/icons/icons8-male-user-48.png" />
               </image>
            </ImageView>
            <Label fx:id="username" prefHeight="38.0" prefWidth="101.0" text="USERNAME" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="typeValue" prefHeight="37.0" prefWidth="71.0" text="Type:" />
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Stamina:" />
                  <Label fx:id="staminaValue" alignment="CENTER" text="STAMINA" />
                  <Label text="Hunger:" />
                  <Label fx:id="hungerValue" text="HUNGER" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <Button fx:id="abilityButton" mnemonicParsing="false" onMouseClicked="#useAbility" text="Use ability" />
                  <Button fx:id="rest" mnemonicParsing="false" onMouseClicked="#restButton" prefHeight="25.0" prefWidth="71.0" text="Rest" />
                  <Button fx:id="eat" mnemonicParsing="false" onMouseClicked="#eatButton" prefHeight="25.0" prefWidth="72.0" text="Eat" />
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
